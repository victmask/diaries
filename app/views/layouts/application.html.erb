<!DOCTYPE html>
<html>
<head>
  <title>Mydiary</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="user_nav">
  <% if current_user   %>
    <div style="float:right;">Logged in as <%= current_user.email  %>
      <%= link_to "Log out", log_out_path %></div>

  <% end %>
</div>

<% flash.each do |name, msg| %>
<%= content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %>

<%= yield %>

</body>
</html>
